---
interface Props {
  companyName?: string;
  phone?: string;
}

const {
  companyName = import.meta.env.PUBLIC_COMPANY_NAME || 'HomeService Leads',
  phone = import.meta.env.PUBLIC_DEFAULT_PHONE || '8135551234'
} = Astro.props;

const currentYear = new Date().getFullYear();

// Format phone for display
const formatPhone = (num: string) => {
  const cleaned = num.replace(/\D/g, '');
  if (cleaned.length === 10) {
    return `(${cleaned.slice(0,3)}) ${cleaned.slice(3,6)}-${cleaned.slice(6)}`;
  }
  return num;
};

const displayPhone = formatPhone(phone);
const telPhone = phone.replace(/\D/g, '');
---

<footer class="bg-navy text-white">
  <div class="max-w-6xl mx-auto px-4 py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-12">
      <!-- Company Info -->
      <div class="md:col-span-2">
        <div class="flex items-center gap-2 mb-4">
          <svg class="w-8 h-8 text-teal" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
            <polyline points="9 22 9 12 15 12 15 22" />
          </svg>
          <span class="font-bold text-xl">{companyName}</span>
        </div>
        <p class="text-gray-400 mb-4 max-w-md">
          Connecting homeowners with top-rated local HVAC, plumbing, and roofing professionals.
          24/7 emergency service available.
        </p>
        <a
          href={`tel:${telPhone}`}
          class="ringba_phone_number inline-flex items-center gap-2 text-xl font-bold text-orange hover:text-orange-light transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {displayPhone}
        </a>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-semibold text-lg mb-4">Services</h4>
        <ul class="space-y-2 text-gray-400">
          <li><a href="/florida/tampa/hvac/" class="hover:text-white transition-colors">HVAC Services</a></li>
          <li><a href="/florida/tampa/plumbing/" class="hover:text-white transition-colors">Plumbing Services</a></li>
          <li><a href="/florida/tampa/roofing/" class="hover:text-white transition-colors">Roofing Services</a></li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="font-semibold text-lg mb-4">Legal</h4>
        <ul class="space-y-2 text-gray-400">
          <li><a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a></li>
          <li><a href="/terms" class="hover:text-white transition-colors">Terms of Service</a></li>
          <li><a href="/do-not-sell" class="hover:text-white transition-colors">Do Not Sell My Info</a></li>
        </ul>
      </div>
    </div>

    <!-- TCPA Disclosure -->
    <div class="mt-12 pt-8 border-t border-white/10">
      <p class="text-xs text-gray-500 leading-relaxed max-w-4xl">
        <strong>TCPA Disclosure:</strong> By submitting your information, you consent to receive calls, texts,
        and emails from {companyName} and up to 4 home service providers regarding your inquiry.
        Calls may be made using autodialer technology and prerecorded messages. Consent is not a condition
        of purchase. Message and data rates may apply. Reply STOP to opt out.
        View our <a href="/privacy" class="underline hover:text-gray-400">Privacy Policy</a> and
        <a href="/terms" class="underline hover:text-gray-400">Terms of Service</a>.
      </p>
    </div>

    <!-- Copyright -->
    <div class="mt-6 pt-6 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-gray-500">
        &copy; {currentYear} {companyName}. All rights reserved.
      </p>
      <div class="flex items-center gap-4 text-gray-500">
        <span class="text-xs">Serving Florida and the Southeast US</span>
      </div>
    </div>
  </div>
</footer>
