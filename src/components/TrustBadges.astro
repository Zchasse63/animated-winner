---
interface Props {
  variant?: 'hero' | 'form' | 'footer' | 'logos';
  className?: string;
}

const { variant = 'hero', className = '' } = Astro.props;
---

{variant === 'hero' && (
  <div class={`flex flex-wrap justify-center gap-3 ${className}`}>
    <div class="trust-badge">
      <svg class="trust-badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <span>24/7 Service</span>
    </div>
    <div class="trust-badge">
      <svg class="trust-badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
      </svg>
      <span>Licensed & Insured</span>
    </div>
    <div class="trust-badge">
      <svg class="trust-badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
      </svg>
      <span>Satisfaction Guaranteed</span>
    </div>
    <div class="trust-badge">
      <svg class="trust-badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <span>Same-Day Service</span>
    </div>
  </div>
)}

{variant === 'form' && (
  <div class={`flex items-center justify-center gap-2 text-gray-500 text-sm ${className}`}>
    <svg class="w-4 h-4 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
    </svg>
    <span>Your information is 100% secure</span>
  </div>
)}

{variant === 'footer' && (
  <div class={`flex flex-wrap justify-center gap-6 ${className}`}>
    <div class="flex items-center gap-2 text-gray-400">
      <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
      </svg>
      <span>BBB Accredited</span>
    </div>
    <div class="flex items-center gap-2 text-gray-400">
      <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <span>State Licensed</span>
    </div>
    <div class="flex items-center gap-2 text-gray-400">
      <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <span>NATE Certified</span>
    </div>
  </div>
)}

{variant === 'logos' && (
  <div class={`flex flex-wrap items-center justify-center gap-8 ${className}`}>
    <span class="text-sm text-gray-500">As seen on:</span>
    <div class="flex items-center gap-6 opacity-60 grayscale hover:opacity-100 hover:grayscale-0 transition-all">
      <!-- Google -->
      <div class="h-6 flex items-center text-gray-400 font-semibold">Google</div>
      <!-- BBB -->
      <div class="h-6 flex items-center text-gray-400 font-semibold">BBB</div>
      <!-- HomeAdvisor -->
      <div class="h-6 flex items-center text-gray-400 font-semibold">HomeAdvisor</div>
      <!-- Angi -->
      <div class="h-6 flex items-center text-gray-400 font-semibold">Angi</div>
    </div>
  </div>
)}
