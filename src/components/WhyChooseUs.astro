---
interface Props {
  vertical?: 'hvac' | 'plumbing' | 'roofing';
  className?: string;
}

const { vertical = 'hvac', className = '' } = Astro.props;

const benefits = [
  {
    title: 'Licensed & Insured',
    description: 'Every contractor in our network is fully licensed, bonded, and insured for your protection.',
    icon: 'shield'
  },
  {
    title: 'Fast Response',
    description: 'Get connected with a local professional within minutes. Most calls returned in under 30 minutes.',
    icon: 'clock'
  },
  {
    title: 'Free Estimates',
    description: 'Know exactly what you\'ll pay before work begins. No hidden fees or surprise charges.',
    icon: 'dollar'
  },
  {
    title: 'Satisfaction Guaranteed',
    description: 'We stand behind our work. If you\'re not happy, we\'ll make it right.',
    icon: 'star'
  },
  {
    title: 'Local Experts',
    description: 'Our contractors know your area and understand local building codes and requirements.',
    icon: 'map'
  },
  {
    title: '24/7 Availability',
    description: 'Emergencies don\'t wait for business hours. We\'re here when you need us most.',
    icon: 'phone'
  }
];

const icons: Record<string, string> = {
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  clock: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
  dollar: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  star: 'M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z',
  map: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z',
  phone: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z'
};
---

<section class={`py-16 md:py-24 bg-white ${className}`}>
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-4">
      Why Choose Us
    </h2>
    <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">
      We connect you with the best local professionals who deliver quality work at fair prices.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {benefits.map((benefit) => (
        <div class="flex gap-4">
          <div class="flex-shrink-0 w-12 h-12 bg-teal/10 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[benefit.icon]} />
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-navy mb-1">{benefit.title}</h3>
            <p class="text-gray-600 text-sm">{benefit.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
