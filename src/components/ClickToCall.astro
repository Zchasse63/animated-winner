---
interface Props {
  phone?: string;
  variant?: 'primary' | 'secondary' | 'cta' | 'text';
  size?: 'sm' | 'md' | 'lg';
  showIcon?: boolean;
  className?: string;
  trackingSource?: string;
}

const {
  phone = '(813) 555-1234',
  variant = 'cta',
  size = 'md',
  showIcon = true,
  className = '',
  trackingSource = 'header',
} = Astro.props;

const cleanPhone = phone.replace(/\D/g, '');
const telHref = cleanPhone.length === 10 ? `tel:+1${cleanPhone}` : `tel:${cleanPhone}`;

const sizeClasses = {
  sm: 'text-sm py-2 px-4',
  md: 'text-base py-3 px-6',
  lg: 'text-lg py-4 px-8',
};

const variantClasses = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  cta: 'btn-cta',
  text: 'text-teal hover:text-teal-600 font-semibold hover:underline',
};

const buttonClass = variant === 'text'
  ? variantClasses[variant]
  : `${variantClasses[variant]} ${sizeClasses[size]}`;
---

<a
  href={telHref}
  class:list={['inline-flex items-center justify-center gap-2 transition-all', buttonClass, className]}
  data-tracking-source={trackingSource}
  onclick={`
    if (typeof gtag !== 'undefined') {
      gtag('event', 'call_click', {
        phone_number: '${phone}',
        source: '${trackingSource}',
        page_url: window.location.href
      });
    }
    if (typeof fbq !== 'undefined') {
      fbq('track', 'Contact', {
        content_name: 'Phone Call',
        content_category: '${trackingSource}'
      });
    }
  `}
>
  {showIcon && (
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
    </svg>
  )}
  <span class="ringba-phone-number">{phone}</span>
</a>
