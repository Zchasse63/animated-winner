---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = true;
---

<BaseLayout title="Page Not Found | HomeService Leads" description="The page you're looking for doesn't exist.">
  <Header />

  <main class="flex-1 flex items-center justify-center py-20">
    <div class="text-center px-4">
      <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-8">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>

      <h1 class="text-4xl md:text-5xl font-bold text-navy mb-4">404</h1>
      <p class="text-xl text-gray-600 mb-8">Oops! The page you're looking for doesn't exist.</p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="btn-primary px-8 py-3">
          Go Home
        </a>
        <a href="/fl/tampa/hvac/ac-repair/" class="btn-secondary px-8 py-3">
          Find HVAC Services
        </a>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
