---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = true;

const companyName = import.meta.env.PUBLIC_COMPANY_NAME || 'HomeService Leads';
---

<BaseLayout
  title={`${companyName} | HVAC, Plumbing & Roofing Leads`}
  description="Get connected with top-rated local HVAC, plumbing, and roofing professionals. 24/7 emergency service, licensed & insured contractors across Florida and the Southeast."
>
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-navy to-navy-light text-white py-20 md:py-32">
      <div class="max-w-6xl mx-auto px-4 text-center">
        <!-- Rating Badge -->
        <div class="inline-flex items-center gap-2 bg-white/10 border border-white/20 rounded-full px-4 py-2 mb-6">
          <div class="flex text-yellow-400">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
          </div>
          <span class="text-sm font-medium">4.9/5 from 500+ Reviews</span>
        </div>

        <h1 class="text-3xl md:text-5xl font-bold mb-4 text-balance">
          Find Top-Rated Home Service Pros
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-2xl mx-auto">
          24/7 Emergency Service • Licensed & Insured • Free Estimates
        </p>

        <!-- Service Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto mt-12">
          <a href="/fl/tampa/hvac/ac-repair/" class="group bg-white/10 hover:bg-white/20 border border-white/20 rounded-xl p-6 transition-all">
            <div class="w-16 h-16 bg-teal/20 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-teal/30 transition-colors">
              <svg class="w-8 h-8 text-teal-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">HVAC Services</h3>
            <p class="text-gray-400 text-sm">AC repair, heating, installation & maintenance</p>
          </a>

          <a href="/fl/tampa/plumbing/drain-cleaning/" class="group bg-white/10 hover:bg-white/20 border border-white/20 rounded-xl p-6 transition-all">
            <div class="w-16 h-16 bg-teal/20 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-teal/30 transition-colors">
              <svg class="w-8 h-8 text-teal-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Plumbing Services</h3>
            <p class="text-gray-400 text-sm">Drain cleaning, water heaters & leak repair</p>
          </a>

          <a href="/fl/tampa/roofing/roof-repair/" class="group bg-white/10 hover:bg-white/20 border border-white/20 rounded-xl p-6 transition-all">
            <div class="w-16 h-16 bg-teal/20 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-teal/30 transition-colors">
              <svg class="w-8 h-8 text-teal-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Roofing Services</h3>
            <p class="text-gray-400 text-sm">Roof repair, replacement & storm damage</p>
          </a>
        </div>
      </div>
    </section>

    <!-- Service Areas Section -->
    <section class="py-16 md:py-24 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-2xl md:text-3xl font-bold text-center mb-4">Serving Florida & The Southeast</h2>
        <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">
          We connect homeowners with licensed, insured contractors across major metro areas.
        </p>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="bg-white rounded-lg p-4 shadow-sm">
            <h3 class="font-semibold text-navy mb-2">Florida</h3>
            <ul class="text-sm text-gray-600 space-y-1">
              <li><a href="/fl/tampa/hvac/ac-repair/" class="hover:text-teal">Tampa</a></li>
              <li><a href="/fl/miami/hvac/ac-repair/" class="hover:text-teal">Miami</a></li>
              <li><a href="/fl/orlando/hvac/ac-repair/" class="hover:text-teal">Orlando</a></li>
              <li><a href="/fl/jacksonville/hvac/ac-repair/" class="hover:text-teal">Jacksonville</a></li>
            </ul>
          </div>
          <div class="bg-white rounded-lg p-4 shadow-sm">
            <h3 class="font-semibold text-navy mb-2">Georgia</h3>
            <ul class="text-sm text-gray-600 space-y-1">
              <li class="text-gray-400">Atlanta (Coming Soon)</li>
              <li class="text-gray-400">Savannah (Coming Soon)</li>
              <li class="text-gray-400">Augusta (Coming Soon)</li>
            </ul>
          </div>
          <div class="bg-white rounded-lg p-4 shadow-sm">
            <h3 class="font-semibold text-navy mb-2">Alabama</h3>
            <ul class="text-sm text-gray-600 space-y-1">
              <li class="text-gray-400">Birmingham (Coming Soon)</li>
              <li class="text-gray-400">Mobile (Coming Soon)</li>
              <li class="text-gray-400">Huntsville (Coming Soon)</li>
            </ul>
          </div>
          <div class="bg-white rounded-lg p-4 shadow-sm">
            <h3 class="font-semibold text-navy mb-2">South Carolina</h3>
            <ul class="text-sm text-gray-600 space-y-1">
              <li class="text-gray-400">Charleston (Coming Soon)</li>
              <li class="text-gray-400">Columbia (Coming Soon)</li>
              <li class="text-gray-400">Greenville (Coming Soon)</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-16 md:py-24">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-2xl md:text-3xl font-bold text-center mb-12">How It Works</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-teal/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-teal">1</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Tell Us Your Need</h3>
            <p class="text-gray-600">Fill out our quick form with your service needs and location.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-teal/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-teal">2</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Get Matched</h3>
            <p class="text-gray-600">We connect you with top-rated local contractors in your area.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-teal/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-teal">3</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Get Fast Service</h3>
            <p class="text-gray-600">A licensed professional contacts you within 30 minutes.</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
